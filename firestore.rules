rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // 관리자(교사, 교역자) 권한 체크
    function isAdmin() {
      return isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pastor'
      );
    }

    // 사용자 프로필 및 개인 기록
    match /users/{userId} {
      allow get, create, update: if isOwner(userId);
      
      // 관리자는 목록 조회, 수정, 삭제 가능
      allow list: if isSignedIn();
      allow update, delete: if isAdmin();
      
      // 개인 묵상 기록
      match /meditations/{meditationId} {
        allow get, list, create: if isOwner(userId);
        allow read, delete: if isAdmin();
      }

      // 개인 보관함
      match /inventory/{itemId} {
        allow get, list, create, update: if isOwner(userId);
        allow read, update, delete: if isAdmin();
      }
    }

    // 그날의 공통 말씀 해설 및 질문
    match /dailyMeditations/{dateId} {
      allow read: if true;
      allow write: if isSignedIn(); 
    }

    // 공개된 콘텐츠
    match /publishedContents/{contentId} {
      allow read: if true;
      allow write: if false;
    }
  }
}