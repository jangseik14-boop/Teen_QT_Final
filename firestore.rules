rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // 사용자 프로필 및 개인 묵상 기록
    match /users/{userId} {
      allow get, list, create, update: if isOwner(userId);
      
      match /meditations/{meditationId} {
        allow get, list, create: if isOwner(userId);
      }
    }

    // 그날의 공통 말씀 해설 및 질문 (전체 공유)
    match /dailyMeditations/{dateId} {
      allow read: if true;
      allow write: if isSignedIn(); 
    }

    match /publishedContents/{contentId} {
      allow read: if true;
      allow write: if false;
    }
  }
}