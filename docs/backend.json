
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "사용자 프로필 정보",
      "properties": {
        "id": { "type": "string" },
        "username": { "type": "string" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["pastor", "teacher", "grade7", "grade8", "grade9", "grade10", "grade11", "grade12"] },
        "gender": { "type": "string", "enum": ["male", "female"] },
        "points": { "type": "number" },
        "totalPoints": { "type": "number" },
        "profilePictureUrl": { "type": "string" }
      }
    },
    "Meditation": {
      "title": "Meditation",
      "type": "object",
      "description": "사용자가 작성한 일일 묵상 기록",
      "properties": {
        "verse": { "type": "string" },
        "reflection": { "type": "string" },
        "resolution": { "type": "string" },
        "prayer": { "type": "string" },
        "completedAt": { "type": "string", "format": "date-time" }
      }
    },
    "InventoryItem": {
      "title": "InventoryItem",
      "type": "object",
      "description": "사용자가 구매한 상점 아이템",
      "properties": {
        "name": { "type": "string" },
        "price": { "type": "number" },
        "status": { "type": "string", "enum": ["available", "used"] },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "User",
      "description": "사용자 기본 정보"
    },
    "/users/{userId}/meditations/{dateId}": {
      "schema": "Meditation",
      "description": "사용자별 날짜별 묵상 기록"
    },
    "/users/{userId}/inventory/{itemId}": {
      "schema": "InventoryItem",
      "description": "사용자 보유 아이템"
    },
    "/dailyMeditations/{dateId}": {
      "schema": "object",
      "description": "AI가 생성한 전체 공개용 일일 묵상 해설"
    },
    "/productRequests/{requestId}": {
      "schema": "object",
      "description": "관리자에게 보낸 상품 신청 내역"
    }
  }
}
